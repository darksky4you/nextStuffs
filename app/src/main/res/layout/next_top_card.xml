<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:id="@+id/nextos_details"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/xcard_background"
    app:cardElevation="0dp"
    android:layout_height="180dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/top_bg_image"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_gravity="end"
        android:layout_margin="20dp"
        android:textColor="#000000"
        android:textSize="12sp"
        android:background="@drawable/background_chip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/build_status"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/card_margin"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textFontWeight="800"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="35sp"
            android:text="NEXT OS "/>
        <TextView
            android:id="@+id/codename_text"
        android:layout_width="0dp"
            android:textColor="#FFF"
        android:layout_height="wrap_content"
        android:layout_weight="400"
        android:fontFamily="@font/poppinslight"
        android:textSize="35sp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>