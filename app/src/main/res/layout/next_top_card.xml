<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:id="@+id/nextos_details"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:elevation="0dp"
    app:cardBackgroundColor="@android:color/system_accent1_700"
    android:layout_height="180dp">
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_rawRes="@raw/card_bg"
        android:rotation="90"
        android:alpha="0.2"
        android:scaleX="2"
        android:scaleY="2"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>
    <TextView
        android:layout_gravity="end"
        android:layout_margin="20dp"
        android:textSize="12sp"
        android:background="@drawable/background_chip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/build_status"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/card_margin"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textFontWeight="800"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="40sp"
            android:text="NEXT OS "/>
        <TextView
        android:layout_width="0dp"
            android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:layout_weight="400"
        android:fontFamily="@font/poppinslight"
        android:textSize="35sp"
        android:text="@string/project_codename_xd"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>